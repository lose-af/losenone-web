---
import { Image } from 'astro:assets';
import { getLocaleByCode, useTranslation } from '~/lib/i18n/utils';
import Layout from '~/layouts/PageLayout.astro';

type Props = {
	title: string;
	description: string;
};

const locale = getLocaleByCode(Astro.currentLocale);
const t = await useTranslation(locale);

const { title, description } = Astro.props;
---

<Layout
	title={title}
	description={description}
	navConfigKey="common"
	lightTheme="light"
	darkTheme="dark"
>
	<footer
		slot="page-footer"
		class="footer footer-center border-t border-base-content/10 p-2 text-base-content"
	>
		<aside>
			<div>
				<a
					href="https://github.com/miracle-box/flint"
					class="link-hover link"
				>
					{t('custom.footer.text')}
				</a>
			</div>

			<div class="flex flex-wrap justify-center gap-x-4 gap-y-1 text-xs">
				<a
					class="link-hover link flex items-center gap-1"
					href="https://www.beian.gov.cn/portal/registerSystemInfo?recordcode=22017202000263"
					rel="nofollow noopener"
				>
					<Image
						alt=""
						width={12}
						height={12}
						class="inline h-3 w-3"
						src="data:image/png;base64,"
					/>
					<span>吉公网安备 22017202000263 号</span>
				</a>
				<a
					class="link-hover link"
					href="https://beian.miit.gov.cn/"
					rel="nofollow noopener"
				>
					吉 ICP 备 2021002465 号
				</a>
			</div>
		</aside>
	</footer>

	<slot />
</Layout>
